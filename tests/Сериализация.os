&Тест
Процедура СериализацияПолейВнеЗависимостиОтЭкспорта() Экспорт

	// Дано
	ТестовыйКласс = Новый ТестовыйКлассСмешанныеПоля();
	
	// Поля с Экспорт
	ТестовыйКласс.ПолеСЭкспортом = "Значение с экспортом";
	ТестовыйКласс.ЧислоЭкспорт = 42;
	
	// Поля без Экспорт
	ТестовыйКласс.ПолеБезЭкспорта = "Значение без экспорта";
	ТестовыйКласс.СтрокаБезЭкспорта = "Строка без экспорта";
	ТестовыйКласс.ОбязательноеПолеБезЭкспорта = "Обязательное значение";

	СериализаторJson = Новый СериализаторJson();
	
	// Когда
	Результат = СериализаторJson.Сериализовать(ТестовыйКласс);

	// Тогда
	Ожидаем.Что(Результат).Не_().Равно("");

	ЧтениеJson = Новый ЧтениеJSON();
	ЧтениеJson.УстановитьСтроку(Результат);
	ПрочитанныйОбъект = ПрочитатьJSON(ЧтениеJson);
	ЧтениеJson.Закрыть();

	Ожидаем.Что(ПрочитанныйОбъект).ИмеетТип("Структура");
	
	// Проверяем, что поля с Экспорт сериализуются
	Ожидаем.Что(ПрочитанныйОбъект.ПолеСЭкспортом).Равно("Значение с экспортом");
	Ожидаем.Что(ПрочитанныйОбъект.числоЭкспорт).Равно(42);
	
	// Проверяем, что поля без Экспорт тоже сериализуются
	Ожидаем.Что(ПрочитанныйОбъект.ПолеБезЭкспорта).Равно("Значение без экспорта");
	Ожидаем.Что(ПрочитанныйОбъект.строкаБезЭкспорта).Равно("Строка без экспорта");
	Ожидаем.Что(ПрочитанныйОбъект.ОбязательноеПолеБезЭкспорта).Равно("Обязательное значение");

КонецПроцедуры
